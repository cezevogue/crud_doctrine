{% extends 'base.html.twig' %}

{% block body %}

    <table>
        <thead>
        <tr>
            <th>id</th>
            <th>titre</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.title }}</td>
            <td>
                <a href="{{ path('category_update', {'id': category.id}) }}">Modifier</a>
                <a href="{{ path('category_delete', {'id': category.id}) }}">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}


